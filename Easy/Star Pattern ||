import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
		 int n=sc.nextInt();
		 for(int j=0;j<n;j++)
		 {
		  String s="";
		  for(int i=0;i<n-j-1;i++)
		    s+=" ";
		  for(int i=0;i<2*j+1;i++)
		    s+="*";
		   System.out.println(s);
		 }
	}

}
