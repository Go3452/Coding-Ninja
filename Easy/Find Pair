public class Solution {
    static int[] findPair(int x, int y) {
        int []ans = new int[2];
        int a=x+y;
        if(a%2==1)
        {
         ans[0]=-1;
         ans[1]=-1;
        }
        else
        {
         ans[0]=a/2;
         ans[1]=x-ans[0];
        }
        return ans;
    }
}
